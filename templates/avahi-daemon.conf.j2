[server]
host-name={{ inventory_hostname }}
domain-name=manet-local
use-ipv4=yes
use-ipv6=no
allow-interfaces={{ wifi_interface }}
ratelimit-interval-usec=1000000
ratelimit-burst=1000

[wide-area]
enable-wide-area=no

[publish]
publish-addresses=yes
publish-hinfo=yes
publish-workstation=yes
publish-domain=yes

[reflector]
enable-reflector=yes
